<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if(blogs.length === 0){ %>
            <h3>No Blog Available</h3>
        <%} else { %>
            <% blogs.forEach(blog => { %>
                <a class="single" href="/single/<%=blog._id%>">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }) %>
        <% } %>
    </div>
</body>
</html>